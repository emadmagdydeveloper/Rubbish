<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:background="@color/gray1"
    >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"

            >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5dp"
                app:tabBackground="@drawable/tab_slider_indicator"
                app:tabGravity="fill"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="7dp"
                app:tabMinWidth="7dp"
                app:tabMode="scrollable" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl"
            app:layout_constraintVertical_bias=".2"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/paper_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/papers"
                            android:textColor="#fe4a39"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/metal_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/metal"
                            android:textColor="#94979c"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/organic_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/organic"
                            android:textColor="#f7941d"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/battery_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/battery"
                            android:textColor="#8ec63f"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:id="@+id/ll5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/ewaste_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/e_waste"
                            android:textColor="#ffc501"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="RtlCompat"
                        android:background="@drawable/ll_bg"
                        >

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:src="@drawable/plastic_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:longClickable="false"
                            android:text="@string/plastics"
                            android:textColor="#01bc6b"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"


                            />

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>